<html lang="pl">
    <%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/nav.ejs') %>
    <div class="edit-files">
        <div class="back-button">
        <button onclick="location.href='/strona_glowna/klienci/<%= clientR._id %>'">&#10094</button>
        </div>
        <h2>Edytuj pliki usługi</h2>
        
        <div class="edit-files-delete">
            <form class="form-edit-files" action="/strona_glowna/klienci/<%= clientR._id %>/<%= task._id %>/edytuj_pliki" method="POST" enctype="multipart/form-data">

                <label for="invoice">Faktura za wykonanie zlecenia:</label><br>
                <input type="file" name="invoice" accept=".pdf,application/pdf" multiple><br><br>
                <label for="postWarrantyProtocols">Protokoły pogwarancyjne:</label><br>
                <input type="file" name="postWarrantyProtocols" accept=".pdf,application/pdf" multiple><br><br><br>

                <button class="editTask-button">Dodaj pliki</button>
            
            </form>
        </div>

        <div class="edit-invoice-protocols">
            <div class="edit-invoice">
            <h4>Faktury:</h4>
           
            <% task.invoice.forEach(inv => { %>
                <a href="/strona_glowna/klienci/<%= clientR._id %>/<%= task._id %>/<%= inv %>" class="inv" title="<%= inv %>">
                    <img src="/files-icon/pdf.png" alt="<%= inv %>" width="45" height="55"><br>
                    <span><%= inv %></span>
                </a>
                <button onclick="location.href='/strona_glowna/klienci/<%= clientR._id%>/<%= task._id %>/edytuj_pliki/<%= inv %>'">Usuń plik</button><br>
            <% }) %> <br>
            </div>

            <div class="edit-protocols">
            <h4>Protokoły:</h4>
            <% task.postWarrantyProtocols.forEach(protocols => { %>
                <a href="/strona_glowna/klienci/<%= clientR._id %>/<%= task._id %>/<%= protocols %>" class="prot" title="<%= protocols %>">
                    <img src="/files-icon/pdf.png" alt="<%= protocols %>" width="45" height="55"><br>
                    <span><%= protocols %></span>
                </a>
                <button onclick="location.href='/strona_glowna/klienci/<%= clientR._id%>/<%= task._id %>/edytuj_pliki/<%= protocols %>'">Usuń plik</button><br>
            <% }) %> <br>
            </div>
        </div>
    </div><br><br><br><br>
    <%- include('../partials/footer.ejs') %>

    <script src="/js/jsClientsPages/jsEditFiles.js"></script>
</body>
</html>